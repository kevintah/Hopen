<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Hopen"
        tools:targetApi="31">
        <activity
            android:name="now.example.hopen.GoogleSignInActivity"
            android:exported="false" />
        <activity
            android:name=".YouSignedIn"
            android:exported="false" /> <!-- below is the code for default activity which is Main Activity -->
        <activity
            android:name="now.example.hopen.MainActivity"
            android:exported="true">

            <!--
                Inside this activity you should be having below code for
                intent filter which will check the default activity
            -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="now.example.hopen.AnotherActivity" />
    </application>

</manifest>